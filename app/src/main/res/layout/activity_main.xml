<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/your_name"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:hint="Name"
        android:inputType="textCapWords"
        android:padding="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:text="Topping"
        android:textAllCaps="true"/>

    <CheckBox
        android:id="@+id/cakeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:text="Cake Piece"/>
    <CheckBox
        android:id="@+id/snakesCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="24dp"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:text="Snakes"/>

    <TextView
        android:id="@+id/titletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="QUANTITY"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        //decreminat

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="6dp"
            android:onClick="minus"
            android:text="-"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16sp"
            android:text="00"
            android:textAlignment="center"
            android:textSize="16sp" />

        //increment

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="6dp"
            android:onClick="plus"
            android:text="+"
            android:textSize="16sp" />


    </LinearLayout>



    <TextView
        android:id="@+id/titleprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16sp"
        android:text="Order Summary"
        android:textAllCaps="true"
        android:textSize="16sp" />

    //priceDollar

    <TextView
        android:id="@+id/ordersummary_pricetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16sp"
        android:text="Order"
        android:textSize="16sp" />

    // two btns order and goto
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:onClick="submitOrder"
            android:text="Order"
            android:textSize="16sp" />

        <Button
            android:id="@+id/go_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="0.51"
            android:onClick="gonext"
            android:text="GO_TO"
            android:textSize="16sp" />
    </LinearLayout>

    //color competitions

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/red"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#D84315"
            android:onClick="redbtn" />

        <TextView
            android:id="@+id/redtext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.5"
            android:text="0"
            android:textSize="30dp" />

        //blue

        <ImageButton
            android:id="@+id/blue"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="#1543D8"
            android:onClick="bluebtn" />

        <TextView
            android:id="@+id/bluetext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.5"
            android:text="0"
            android:textSize="30dp" />

        // voted



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statusvoted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:padding="22dp"
            android:text="Status"
            android:textSize="30dp" />
    </LinearLayout>


</LinearLayout>
</ScrollView>